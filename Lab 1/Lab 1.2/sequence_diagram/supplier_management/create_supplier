@startuml
actor User
control "Control" as C
participant "Server" as S
database Database

activate User
User -> C: (1) Requests to create supplier
activate C
C --> User: (2) Display form to create supplier
User -> C: (3) Input supplier information
C -> C: (4) isSupplierDataValid
alt true
    C -> S: (5) createSupplier
    activate S
    S -> Database: (6) checkSupplierExists
    activate Database
    Database --> S: (7) existsStatus
    deactivate Database
    S -> S: (8) isSupplierAlreadyExists
    alt true
        S --> C: (9) sendSupplierAlreadyExistsMessage
        C --> User: (10) showSupplierAlreadyExistsMessage
    else false
        S -> Database: (11) createSupplier
        activate Database
        Database --> S: (12) sendSuccessMessage
        deactivate Database
        S --> C: (12) sendSucessMessage
        deactivate S
        C --> User: (13) showSuccessMessage
    end
else false
    C --> User: (14) showFailureMessage
    deactivate C
end
deactivate C
@enduml
