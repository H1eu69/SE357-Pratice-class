@startuml
actor User
control "Control" as C
participant "Server" as S
database Database

activate User
User -> C: (1) Requests to create supplier
activate C
C --> User: (2) Display form to create supplier
deactivate C
User -> C: (3) Input supplier information
activate C
C -> C: (4) isSupplierDataValid(data)
alt true
    C -> S: (5) createSupplier(data)
    activate S
    S -> Database: (6) checkSupplierExists(data)
    activate Database
    Database --> S: (7) existsStatus()
    deactivate Database
    S -> S: (8) isSupplierAlreadyExists(existsStatus)
    alt true
        S --> C: (9) notufySupplierAlreadyExists()
        C --> User: (10) displayMessage(MSG_6)
    else false
        S -> Database: (11) createSupplier(data)
        activate Database
        Database --> S: (12) notifyCreateSucess()
        deactivate Database
        S --> C: (12) notifyCreateSucess()
        deactivate S
        C --> User: (13) displayMessage(MSG_2)
    end
else false
    C --> User: (14) displayMessage(MSG_5)
    deactivate C
end
deactivate C
@enduml
