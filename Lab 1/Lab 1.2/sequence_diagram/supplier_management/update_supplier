@startuml
actor User
control "Control" as C
participant "Server" as S
database Database

activate User
User -> C: (1) Requests to update supplier
activate C
C --> User: (2) Display form to update supplier
User -> C: (3) Input new supplier information
C -> C: (4) isNewSupplierDataValid
alt true
    C -> S: (5) updateSupplier
    activate S
    S -> Database: (6) updateSupplier
    activate Database
    Database --> S: (7) sendUpdateSuccessMessage
    deactivate Database
    S --> C: (8) sendUpdateSuccessMessage
    deactivate S
    C --> User: (9) showSuccessMessage
else false
    C --> User: (10) showFailureMessage
    deactivate C
end
deactivate C
@enduml
