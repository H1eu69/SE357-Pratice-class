@startuml
actor User
control "Control" as C
participant "Server" as S
database Database

activate User
User -> C: (1) Requests to update supplier
activate C
C --> User: (2) Display form to update supplier
deactivate C
User -> C: (3) Input new supplier information
activate C
C -> C: (4) isNewSupplierDataValid(data)
alt true
    C -> S: (5) updateSupplier(supplierId, data)
    activate S
    S -> Database: (6) updateSupplier(supplierId, data)
    activate Database
    Database --> S: (7) notifyUpdateSuccess()
    deactivate Database
    S --> C: (8) notifyUpdateSuccess()
    deactivate S
    C --> User: (9) displayMessage(MSG_3)
else false
    C --> User: (10) displayMessage(MSG_5)
    deactivate C
end
deactivate C
@enduml
