@startuml
actor User
control "Control" as C
participant "Server" as S
database Database

activate User
User -> C: (1) Requests to create a product
activate C
C --> User: (2) Display form to create product
User -> C: (3) Input product data
C -> C: (4) isValidProductData
alt true
    C -> S: (5) createNewProduct
    activate S
    S -> Database: (6) checkProductAlreadyExists
    activate Database
    Database --> S: (7) existsStatus
    deactivate Database
    S -> S: (8) isAlreadyExists
    alt true
        S --> C: (9) sendProductAlreadyExistsMessage
        C --> User: (10) showProductAlreadyExistsMessage
    else false
        S -> Database: (11) createNewProduct
        Database --> S: (12) sendCreateSuccessMessage
        deactivate Database
        S --> C: (13) sendCreateSuccessMessage
        C --> User: (14) showCreateSuccessMessage
        deactivate S
    end 
else false
    C --> User: (15) showFailureMessage
    deactivate C
end

@enduml