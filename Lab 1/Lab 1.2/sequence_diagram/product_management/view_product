@startuml
actor User
control "Control" as C
participant "Server" as S
database Database

activate User
User -> C: (1) Requests to read all product
activate C
C -> S: (2) getAllProduct()
activate S
S -> Database: (3) getAllProduct()
activate Database
Database --> S: (4) allProductData()
deactivate Database
S --> C: (5) sendProductData()
deactivate S
C --> User: (6) showAllProduct()
deactivate C
User -> C: (7) Click on specific product
activate C
C -> S: (8) getProductDetails(productId)
activate S
S -> Database: (9) getProductDetails(productId)
activate Database
Database --> S: (10) productDetails(productData)
deactivate Database
S --> C: (11) productDetails(productData)
deactivate S
C --> User: (12) showProductDetails(productData)
deactivate C
@enduml