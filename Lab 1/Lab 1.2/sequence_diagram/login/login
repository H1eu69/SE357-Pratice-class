@startuml
actor User
control "Control" as C
participant "Server" as S
database Database

activate User
User -> C: (1) Enters credentials
activate C
C -> C: (2) isCredentialValid
alt true
    C -> S: (3) login
    activate S
    S -> Database: (4) validAccount
    activate Database
    Database --> S: (5) loginStatus
    deactivate Database
    S -> S: (6) isValid
    alt true
        S --> C: (7) sendSuccessMessage
        C --> User: (8) showDashboardScreen
    else false
        S --> C: (9) sendFailureMessage
        deactivate S
        C --> User: (10) showFailureMessage
    end
else false
    C --> User: (11) showFailureMessage
    deactivate C
end
@enduml
