@startuml
actor User
control "Control" as C
participant "Server" as S
database Database

activate User
User -> C: (1) Request to view branch report
activate C
C -> S: (2) getBranchStatistic
activate S
S -> Database: (3) getBranchData
activate Database
Database --> S: (4) branchNeededData
deactivate Database
S -> S: (5) computeData
S -> S: (6) generaReport
S --> C: (7) sendReport
deactivate S
C --> User: (8) showBranchReport
deactivate C
@enduml
