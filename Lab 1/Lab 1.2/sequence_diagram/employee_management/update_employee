@startuml
actor User
control "Control" as C
participant "Server" as S
database Database

activate User
User -> C: (1) Requests to update an employee
activate C 
C --> User: (2) Display form to update employee infomation
User -> C: (3) Input employee data
C -> C: (4) isValidData
alt true
    C -> S: (5) updateEmployeeInformation
    activate S
    S -> Database: (6) updateEmployee
    activate Database
    Database --> S: (7) sendUpdateSuccessMessage
    deactivate Database
    S --> C: (8) sendSuccessMessage
    deactivate S
    C --> User: (9) showSuccessMessage
else false
    C --> User: (10) showFailureMessage
    deactivate C
end
@enduml