@startuml
actor User
control "Control" as C
participant "Server" as S
database Database

activate User
User -> C: (1) Click on btnUpdate
activate C 
C --> User: (2) Display form to update employee
User -> C: (3) Input employee data
C -> C: (4) isValidData(data)
alt true
    C -> S: (5) updateEmployee(employeeId, data)
    activate S
    S -> Database: (6) updateEmployee(employeeId, data)
    activate Database
    Database --> S: (7) notifyUpdateSuccess()
    deactivate Database
    S --> C: (8) notifyUpdateSuccess()
    deactivate S
    C --> User: (9) displayMessage(MSG_3)
else false
    C --> User: (10) displayMessage(MSG_5)
    deactivate C
end
@enduml