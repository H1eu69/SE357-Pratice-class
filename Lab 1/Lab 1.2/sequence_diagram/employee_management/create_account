@startuml
actor User
control "Control" as C
participant "Server" as S
database Database

activate User
User -> C: (1) Requests to create an employee
activate C
C --> User: (2) Display form to create employee
User -> C: (3) Input employee data
C -> C: (4) isValidEmployeeData
alt true
    C -> S: (5) createNewEmployee
    activate S
    S -> Database: (6) checkAccountExists
    activate Database
    Database --> S: (7) existsStatus
    S -> S: (8) isUserNotExists
    alt true
        S -> Database: (9) createNewEmployee
        Database --> S: (10) sendCreateSuccessMessage
        deactivate Database
        S --> C: (11) sendCreateSuccessMessage
        C --> User: (12) showCreateSuccessMessage
    else false
        S --> C: (13) sendUserAlreadyExistsMessage
        deactivate S
        C --> User: (14) showUserAlreadyExistsMessage
    end
else false
    C --> User: (15) showFailureMessage
    deactivate C
end
@enduml