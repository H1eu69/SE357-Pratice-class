@startuml
actor User
control "Control" as C
participant "Server" as S
database Database

activate User
User -> C: (1) Requests to create an employee
activate C
C --> User: (2) Display form to create employee
User -> C: (3) Input employee data
C -> C: (4) isValidEmployeeData(data)
alt true
    C -> S: (5) createNewEmployee(data)
    activate S
    S -> Database: (6) checkAccountExists(data)
    activate Database
    Database --> S: (7) existsStatus()
    deactivate Database
    S -> S: (8) isUserNotExists(existsStatus())
    alt true
        S -> Database: (9) createNewEmployee(data)
        activate Database
        Database --> S: (10) notifyCreateSuccess()
        deactivate Database
        S --> C: (11) notifyCreateSuccess()
        C --> User: (12) displayMessage(MSG_2)
    else false
        S --> C: (13) notifyUserAlreadyExists()
        deactivate S
        C --> User: (14) displayMessage(MSG_8)
    end
else false
    C --> User: (15) displayMessage(MSG_5)
    deactivate C
end
@enduml