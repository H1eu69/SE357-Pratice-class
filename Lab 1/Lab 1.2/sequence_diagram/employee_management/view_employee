@startuml
actor User
control "Control" as C
participant "Server" as S
database Database

activate User
User -> C: (1) Requests to read all employee
activate C 
C -> S: (2) getAllEmployee()
deactivate C
activate S
S -> Database: (3) getAllEmployee()
activate Database
Database --> S: (4) allEmployee(data)
deactivate Database
S --> C: (5) sendAllEmployee(data)
deactivate S
activate C
C --> User: (6) showAllEmployee(data)
deactivate C
User -> C: (7) Requests to see specific employee details
activate C
C -> S: (8) getEmployeeDetails(employeeId)
deactivate C
activate S
S -> Database: (9) getEmployeeDetails(employeeId)
activate Database
Database --> S: (10) employeeDetails(data)
deactivate Database
S --> C: (11) employeeDetails(data)
deactivate S
activate C
C --> User: (12) showEmployeeDetails(data)
deactivate C
@enduml