@startuml
actor User
control "Control" as C
participant "Server" as S
database Database

activate User
User -> C: (1) Requests to create a branch
activate C
C --> User: (2) Display form to create branch
User -> C: (3) Input branch infomation
C -> C: (4) isBranchDataValid
alt true
    C -> S: (5) createBranch
    activate S
    S -> Database: (6) createBranch
    activate Database
    Database --> S: (7) sendCreateSuccessMessage
    deactivate Database
    S --> C: (8) sendSuccessMessage
    deactivate S
    C --> User: (9) showSuccessMessage
else false
    C --> User: (10) showFailureMessage
    deactivate C
end
@enduml