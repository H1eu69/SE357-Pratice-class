@startuml
actor User
control "Control" as C
participant "Server" as S
database Database

activate User
User -> C: (1) Requests export goods
activate C
C --> User: (2) Display form to export goods
loop Selects product
    User -> C: Selects an item and enter quantity
    C --> User: Displays selected item
end
C -> S: (3) exportGoods
activate S
S -> Database: (4) checkGoodsQuantity
activate Database
Database --> S: (5) quantityStatus
alt Enough
    S -> Database: (6) saveExportGoodsInformation
    Database --> S: (7) saveSuccessMessage
    S --> C: (8) sendSuccessMessage
    C -> C: (9) generateGoodDeliveryNote
    C --> User: (10) showGoodDeliveryNote
else Insufficient
    S --> C: (11) sendFailureMessage
    deactivate S
    C --> User: (12) showFailureMessage
    deactivate C
end
@enduml
