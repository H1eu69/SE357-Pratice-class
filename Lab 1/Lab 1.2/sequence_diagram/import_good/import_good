@startuml
actor User
control "Control" as C
participant "Server" as S
database Database

activate User
User -> C: (1) Requests import good
activate C
C --> User: (2) Display form to import good
loop Selects product
    User -> C: Selects an item and enter quantity
    C --> User: Displays selected item
end
C -> S: (3) importGood
activate S
S -> Database: (4) saveImportGoodInformation
activate Database
Database --> S: (5) saveSuccessMessage
deactivate Database
S -> S: (6) sendNotificationToWarehouseManager
S --> C: (7) sendSuccessMessage
deactivate S
C -> C: (8) generateWarehouseReceipt
C --> User: (9) showWarehouseReceipt
deactivate C
@enduml
