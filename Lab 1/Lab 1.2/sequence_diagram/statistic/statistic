@startuml
actor User
control "Control" as C
participant "Server" as S
database Database

activate User
User -> C: (1) Request to view statistic
activate C
C -> S: (2) getData()
deactivate C
activate S
S -> Database: (3) getData()
activate Database
Database --> S: (4) data()
deactivate Database
S -> S: (5) computeData()
S --> C: (6) computedData()
deactivate S
activate C
C --> User: (7) displayChart()
deactivate C
@enduml
