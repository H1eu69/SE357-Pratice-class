@startuml
actor User
control "Control" as C
participant "Server" as S
database Database

activate User
User -> C: (1) Requests sign-out
activate C
C -> S: (2) logout
activate S
S -> Database: (3) logoutAccount
activate Database
Database --> S: (4) accountStatus
deactivate Database
S --> C: (5) sendSuccessMessage
deactivate S
C --> User: (6) showLoginScreen
deactivate C
@enduml
